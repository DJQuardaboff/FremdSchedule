<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="android.support.v4.app.Fragment"
    android:id="@+id/classListItem">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemSubtitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Samplier text"
        android:layout_gravity="end"
        android:layout_below="@id/itemTitle"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/itemProgress"
        android:progressDrawable="@drawable/blue_progress"
        android:layout_below="@id/itemSubtitle"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemStartTime"
        android:layout_below="@id/itemProgress"
        android:layout_alignParentStart="true" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemEndTime"
        android:layout_below="@id/itemProgress"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
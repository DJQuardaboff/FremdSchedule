<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/AppTheme"
    tools:context="android.support.v4.app.Fragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/primary_text_light"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemSubtitle"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_gravity="end"
        android:layout_below="@id/itemTitle"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/tertiary_text_light"
        android:layout_marginRight="16dp" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:id="@+id/itemProgress"
        android:progressDrawable="@drawable/blue_progress"
        android:layout_below="@id/itemSubtitle"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemStartTime"
        android:layout_below="@id/itemProgress"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginLeft="16dp" />

    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/itemEndTime"
        android:layout_below="@id/itemProgress"
        android:layout_alignParentEnd="true"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginRight="16dp" />

</RelativeLayout>